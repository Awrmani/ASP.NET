@model IEnumerable<F2022A3AVA.Models.PlaylistBaseViewModel>

@{
    ViewBag.Title = "Playlists";
}

<h2>Playlists</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TracksCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <span class="badge badge-pill badge-secondary">@Html.DisplayFor(modelItem => item.TracksCount)</span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlaylistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlaylistId })
        </td>
    </tr>
}

</table>
