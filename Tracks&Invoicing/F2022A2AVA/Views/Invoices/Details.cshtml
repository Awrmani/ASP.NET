@model F2022A2AVA.Models.InvoiceWithDetailViewModel

@{ 
    string title = "All Tracks";
    title = "Details For Invoice" + " #" + Model.InvoiceId;
    ViewBag.Title = title; }

<h2>@title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer Info
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerId)<br />
            @Html.DisplayFor(model => model.CustomerFirstName)
            @Html.DisplayFor(model => model.CustomerLastName)<br />
            @Html.DisplayFor(model => model.CustomerState),
            @Html.DisplayFor(model => model.CustomerCountry)
        </dd>

        <dt>
            Billing Address
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BillingAddress)<br />
            @Html.DisplayFor(model => model.BillingCity),
            @Html.DisplayFor(model => model.BillingState)<br />
            @Html.DisplayFor(model => model.BillingCountry),
            @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>
    </dl>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Sales Rep
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerEmployeeFirstName)
            @Html.DisplayFor(model => model.CustomerEmployeeLastName)<br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd>
            @Html.DisplayFor(mode => Model.Total)
        </dd>
    </dl>
</div>

<h4>Line Items</h4>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceLines.First().InvoiceLineId)
        </th>
        <th align="center" class="text-center">
            Track
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceLines.First().UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceLines.First().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceLines.First().LinePrice)
        </th>
    </tr>

    @foreach (var item in Model.InvoiceLines)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceLineId)
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(modelItem => item.TrackName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TrackName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => item.TrackAlbumTitle)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TrackAlbumTitle)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => item.TrackAlbumArtistName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TrackAlbumArtistName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => item.TrackComposer)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TrackComposer)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => item.TrackGenreName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TrackGenreName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => item.TrackMediaTypeName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TrackMediaTypeName)
                    </dd>
                </dl>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinePrice)
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
