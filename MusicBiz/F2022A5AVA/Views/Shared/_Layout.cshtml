<!DOCTYPE html>
<html>
<head>
    <!-- Do not modify the meta properties below -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="F2022A5AVA" />
    <meta name="application-name" content="2227-d1585903-93c8-4917-b5b6-12ede58da067" />

    <title>@ViewBag.Title - Music Biz I</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{
        var userAccount = new F2022A5AVA.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Music Biz I", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Artists", "Index", "Artist")</li>
                    <li>@Html.ActionLink("Albums", "Index", "Album")</li>
                    <li>@Html.ActionLink("Tracks", "Index", "Track")</li>


                    @using System.Security.Claims;
                    @if ((User as ClaimsPrincipal).HasClaim(ClaimTypes.Role, "Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Load data <b class="caret"></b></a>
                            <ul class="dropdown-menu">

                                <li>@Html.ActionLink("Load Roles", "Index", "LoadData")</li>
                                <li>@Html.ActionLink("Load Genres", "Genre", "LoadData")</li>
                                <li>@Html.ActionLink("Load Artists", "Artist", "LoadData")</li>
                                <li>@Html.ActionLink("Load Albums", "Album", "LoadData")</li>
                                <li>@Html.ActionLink("Load Tracks", "Track", "LoadData")</li>
                                <li>@Html.ActionLink("Remove Data", "Remove", "LoadData")</li>
                                <li>@Html.ActionLink("Remove Database", "RemoveDatabase", "LoadData")</li>
                            </ul>
                        </li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <small>
                    By submitting this assignment you agree to the following:
                    I declare that this assignment is my own work in accordance with the Seneca Academic
                    Policy. No part of this assignment has been copied manually or electronically from
                    any other source (including web sites) or distributed to other students.
                </small>
            </p>
            <p>&copy; Arman Valaee Asr, avalaee-asr@myseneca.ca, WEB524 Fall 2022</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
